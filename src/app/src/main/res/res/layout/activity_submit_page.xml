<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.phase1.SubmitPage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="EMERGENCY CALL"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="#ff240b1c"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please enter the confirmation code below:"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#ff240b1c"
        android:id="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:gravity="left"
        android:textColor="#ff240b1c"
        android:ems="20"
        android:id="@+id/code"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp"
        android:textColorHint="#ff240b1c"
        android:hint="Confirmation Code"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="Previous"
        android:background="@drawable/mybutton"
        android:id="@+id/previous"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/submit"
        android:layout_alignStart="@+id/submit" />

    <Button
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:layout_marginTop="94dp"
        android:background="@drawable/mybutton"
        android:text="Submit"
        android:id="@+id/submit"
        android:layout_below="@+id/previous"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
