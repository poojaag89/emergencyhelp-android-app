<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.phase1.SignUpPage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="EMERGENCY CALL"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="#ff240b1c"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Registration:"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#ff240b1c"
        android:id="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="#ff240b1c"
        android:ems="20"
        android:id="@+id/firstName"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="20dp"
        android:textColorHint="#ff240b1c"
        android:hint="First Name"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="#ff240b1c"
        android:ems="20"
        android:id="@+id/lastName"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="60dp"
        android:textColorHint="#ff240b1c"
        android:hint="Last Name"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textColor="#ff240b1c"
        android:ems="20"
        android:id="@+id/number"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="100dp"
        android:textColorHint="#ff240b1c"
        android:hint="Mobile Number"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColor="#ff240b1c"
        android:ems="20"
        android:id="@+id/email"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="140dp"
        android:textColorHint="#ff240b1c"
        android:hint="Email Address"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="#ff240b1c"
        android:ems="20"
        android:id="@+id/address1"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="180dp"
        android:textColorHint="#ff240b1c"
        android:hint="Address Line 1"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="#ff240b1c"
        android:ems="20"
        android:id="@+id/address2"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="220dp"
        android:textColorHint="#ff240b1c"
        android:hint="Address Line 2"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="#ff240b1c"
        android:ems="20"
        android:id="@+id/city"
        android:hint="City"
        android:textColorHint="#ff240b1c"
        android:layout_below="@+id/address2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="#ff240b1c"
        android:ems="20"
        android:id="@+id/state"
        android:hint="State"
        android:textColorHint="#ff240b1c"
        android:layout_alignRight="@+id/address2"
        android:layout_alignEnd="@+id/address2"
        android:layout_toEndOf="@+id/city"
        android:layout_alignTop="@+id/city"
        android:layout_toRightOf="@+id/city" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="#ff240b1c"
        android:ems="20"
        android:id="@+id/country"
        android:hint="Country"
        android:textColorHint="#ff240b1c"
        android:layout_below="@+id/address2"
        android:layout_marginTop="40dp"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textColor="#ff240b1c"
        android:ems="20"
        android:id="@+id/postalCode"
        android:hint="Postal Code"
        android:textColorHint="#ff240b1c"
        android:layout_alignRight="@+id/address2"
        android:layout_alignEnd="@+id/address2"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/city"
        android:layout_alignTop="@+id/city"
        android:layout_toRightOf="@+id/city" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="#ff240b1c"
        android:ems="20"
        android:id="@+id/password"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="340dp"
        android:textColorHint="#ff240b1c"
        android:hint="Password"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="#ff240b1c"
        android:ems="20"
        android:id="@+id/renterPassword"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="380dp"
        android:textColorHint="#ff240b1c"
        android:hint="Re-enter Password"/>

    <Button
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="Previous"
        android:background="@drawable/mybutton"
        android:id="@+id/previous"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="Next"
        android:background="@drawable/mybutton"
        android:id="@+id/next"
        android:layout_alignTop="@+id/previous"
        android:layout_alignRight="@+id/renterPassword"
        android:layout_alignEnd="@+id/renterPassword" />





</RelativeLayout>
