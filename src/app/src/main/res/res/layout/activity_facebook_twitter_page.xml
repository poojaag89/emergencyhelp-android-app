<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.phase1.FacebookTwitterPage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="EMERGENCY CALL"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="#ff240b1c"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Additional Information:"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#ff240b1c"
        android:id="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView" />

    <ImageView
        android:id="@+id/facebook"
        android:layout_width="200px"
        android:layout_height="200px"
        android:src="@drawable/facebook"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="#ff240b1c"
        android:ems="20"
        android:id="@+id/fbtext"
        android:textColorHint="#ff240b1c"
        android:hint="Enter Facebook Id"

        android:layout_below="@+id/facebook"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="#ff240b1c"
        android:ems="20"
        android:id="@+id/fbpwd"
        android:textColorHint="#ff240b1c"
        android:hint="Enter Facebook Password"

        android:layout_below="@+id/fbtext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/twitter"
        android:layout_width="150px"
        android:layout_height="150px"
        android:src="@drawable/twitter"

        android:layout_below="@+id/fbpwd"
        android:layout_alignLeft="@+id/facebook"
        android:layout_alignStart="@+id/facebook"
        android:layout_alignRight="@+id/facebook"
        android:layout_alignEnd="@+id/facebook" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="#ff240b1c"
        android:ems="20"
        android:id="@+id/twtext"
        android:textColorHint="#ff240b1c"
        android:hint="Enter Twitter Id"
        android:layout_below="@+id/twitter"
        android:layout_centerHorizontal="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="#ff240b1c"
        android:ems="20"
        android:id="@+id/twtpwd"
        android:textColorHint="#ff240b1c"
        android:hint="Enter Twitter Password"
        android:layout_below="@+id/twtext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="Next"
        android:background="@drawable/mybutton"
        android:id="@+id/next"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="Previous"
        android:background="@drawable/mybutton"
        android:id="@+id/previous"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="Skip>>"
        android:background="@drawable/mybutton"
        android:id="@+id/skip"
        android:layout_below="@+id/twtpwd"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
