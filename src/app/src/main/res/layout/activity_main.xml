<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent" android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp" tools:context=".MainActivity"
    android:id="@+id/tv">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textColor="#ff240b1c"
        android:ems="20"
        android:id="@+id/number"
        android:layout_marginTop="44dp"
        android:textColorHint="#ff240b1c"
        android:hint="Enter Phone Number"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="20"
        android:id="@+id/password"
        android:layout_below="@+id/number"
        android:layout_alignLeft="@+id/number"
        android:layout_alignStart="@+id/number"
        android:textColor="#ff240b1c"
        android:textColorHint="#ff240b1c"
        android:hint="Enter Password" />



    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/button"
        android:gravity="center"
        android:background="@drawable/mybutton"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="#ff240b1c"
        android:id="@+id/button2"
        android:background="@drawable/mybutton"
        android:layout_marginBottom="107dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/password"
        android:layout_alignEnd="@+id/password" />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:id="@+id/button4"
        android:background="@drawable/mybutton"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
