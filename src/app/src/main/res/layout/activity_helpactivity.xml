<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.phase1.helpactivity">

    <Button
        android:layout_width="300px"
        android:layout_height="300px"
        android:text="FRIENDS HELP"
        android:background="@drawable/greenbutton"
        android:id="@+id/green"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp" />

    <Button
        android:layout_width="300px"
        android:layout_height="300px"
        android:text="911 HELP"
        android:background="@drawable/redbutton"
        android:id="@+id/red"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/green"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="300px"
        android:layout_height="300px"
        android:text="RAISE ALARM"
        android:background="@drawable/whitebutton"
        android:id="@+id/white"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/red"
        android:layout_alignLeft="@+id/red"
        android:layout_alignStart="@+id/red" />



</RelativeLayout>
